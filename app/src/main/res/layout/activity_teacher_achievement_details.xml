        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teacher_achievement_details_reviewed_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/teacher_achievement_details_reviewed" />

            <TextView
                android:id="@+id/teacher_achievement_details_reviewed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/teacher_achievement_details_reviewed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teacher_achievement_details_msi_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/teacher_achievement_details_msi" />

            <TextView
                android:id="@+id/teacher_achievement_details_msi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/teacher_achievement_details_msi" />

        </LinearLayout>

        <!-- Delete Academic Achievement Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_delete_teacher_achievement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="@string/delete_teacher_achievement"
            android:textColor="@color/primaryTextColor"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>