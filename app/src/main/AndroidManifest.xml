<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.stevemann.sams">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".activities.LoginActivity"
            android:label="Login"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activities.SignupActivity"
            android:label="Signup"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activities.ResetPasswordActivity"
            android:label="Reset Password"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.ResetProfileActivity"
            android:label="Reset Profile"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.AddAchievementActivity"
            android:label="Add Achievement"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.AchievementDetailsActivity"
            android:label="Achievement Details"
            android:theme="@style/AppTheme.Dark.Details" />
        <activity
            android:name=".activities.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.SearchAchievementActivity"
            android:label="Search Achievements"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.SearchResultsActivity"
            android:label="Search Results"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AcademicDetailsActivity"
            android:label="Achievement Details"
            android:theme="@style/AppTheme.Dark.Details" />
        <activity
            android:name=".activities.AddAcademicAchievementActivity"
            android:label="Add Academic Achievement"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.TeacherAchievementActivity"
            android:label="@string/title_activity_teacher_achievement"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.AddTeacherAchievementActivity"
            android:label="Add Teacher Achievement"
            android:theme="@style/AppTheme.Light" />
    </application>

</manifest>